<mvc:View controllerName="logaligroup.SAPUI5.controller.InvoicesList"
          xmlns="sap.m" 
          xmlns:mvc="sap.ui.core.mvc">
    <List headerText="{i18n>InvoicesListTitle}" 
          class="sapUiResponsiveMargin" 
          width="auto"
          items="{northwind>/Invoices}"> 
        <items>
          <ObjectListItem title="{northwind>Quantity} x {northwind>ProductName}"
                          number="{ parts: [{path: 'northwind>ExtendedPrice'},
                                            {path: 'currency>/usd'}],
                                    type: 'sap.ui.model.type.Currency',
                                    formatOptions: {
                                        showMeasure: false
                                    } }"
                          numberUnit="{currency>/usd}"
                          numberState="{= ${northwind>ExtendedPrice} &gt; 50 ? 'Success' : 'Error' }">
          </ObjectListItem>
        </items>
    </List>
</mvc:View>